{
  "name": "studio-legale",
  "version": "1.0.0",
  "description": "This is a project that we are using for a website",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "deploy:staging": "git push origin dev && echo '✅ Deployed to staging! Go to vercel.com to set alias if needed'",
    "deploy:production": "git checkout main && git merge dev && git push origin main && git checkout dev && echo '✅ Deployed to production!'",
    "staging-alias": "npx vercel alias set $(npx vercel ls | grep studio-legale | head -1 | awk '{print $1}') studio-legale-amaranto-stg.vercel.app",
    "db:seed": "prisma db seed",
    "create-admin": "node scripts/create-admin.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AndrewChop/studio-legale.git"
  },
  "author": "AndrewChop",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AndrewChop/studio-legale/issues"
  },
  "homepage": "https://github.com/AndrewChop/studio-legale#readme",
  "devDependencies": {
    "@tailwindcss/line-clamp": "^0.4.4",
    "@types/node": "22.15.30",
    "@types/react": "19.1.6",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "postcss": "^8.5.4",
    "prisma": "^6.1.0",
    "tailwindcss": "^3.4.17",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.1.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.3",
    "@sendgrid/mail": "^8.1.6",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.513.0",
    "next": "^15.4.0",
    "next-auth": "^4.24.11",
    "next-intl": "^4.3.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^6.6.0",
    "tailwind-variants": "^1.0.0"
  }
}
